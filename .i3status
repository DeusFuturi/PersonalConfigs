# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
}



order += "volume master"
order += "cpu_usage"
order += "wireless _first_"
order += "disk /"
order += "disk /mnt/Secondary"
order += "load"
order += "memory"
order += "tztime local"

volume master {
    format = "♪ Volume: %volume"
    format_muted = "♪: Now muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}


cpu_usage {
	format = "CPU: %cpu0"	
}

wireless _first_ {
        format_up = "(%quality at %essid)"
        format_down = "Network down"
}


disk "/" {
    format = "C: Used: %percentage_used - Free: %percentage_free - %avail avaiil"
    prefix_type = "binary"
    low_threshold = 10
    threshold_type = "percentage_free"
    format_below_threshold = "Warning C: %percentage_free% is free, %avail avail"
}

disk "/mnt/Secondary" {
    format = "D: Used: %percentage_used- Free: %percentage_free - %avail avail"
    prefix_type = "binary"
    low_threshold = 20
    threshold_type = "percentage_free"
    format_below_threshold = "Warning D: %percentage_free is free - %avail is avail"
}

load {
        format = "Load (%1min)"
}

memory {
        format = "%used Mem | %available Mem"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "Date is %m-%d | Time is %I:%M%p"
}
